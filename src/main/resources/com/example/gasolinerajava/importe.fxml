    <Button fx:id="btn10" text="10 €" onAction="#handle10" />
    <Button fx:id="btn15" text="15 €" onAction="#handle15" />
    <Button fx:id="btn20" text="20 €" onAction="#handle20" />
    <Button fx:id="btn50" text="50 €" onAction="#handle50" />
