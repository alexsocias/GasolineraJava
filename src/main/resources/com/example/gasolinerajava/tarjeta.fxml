<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gasolinerajava.DatosTarjetaController">
    <Label text="Introduce los datos de tu tarjeta:"/>
    <HBox spacing="20">
        <Label text="Número de tarjeta:"/>
        <TextField fx:id="txtNumeroTarjeta" />
    </HBox>
    <HBox spacing="20">
        <Label text="Fecha de vencimiento:"/>
        <TextField fx:id="txtFechaVencimiento" />
    </HBox>
    <HBox spacing="20">
        <Label text="Código de seguridad:"/>
        <TextField fx:id="txtCodigoSeguridad" />
    </HBox>
    <Button fx:id="btnConfirmar" text="Confirmar" onAction="#handleConfirmar" />
</VBox>